[module/player-mpris-tail]
type = custom/script
exec = ~/dotfiles/polybar/polybar-scripts/polybar-scripts/player-mpris-tail/player-mpris-tail.py -f '%{T1}{icon} {:artist:t18:{artist}:}{:artist: - :}{:t20:{title}:}  %{A1:~/polybar-scripts/polybar-scripts/player-mpris/player-mpris-tail.py previous:} ‚èÆ %{A} %{A1:~/polybar-scripts/polybar-scripts/player-mpris/player-mpris-tail.py play-pause:} {icon-reversed} %{A} %{A1:~/polybar-scripts/polybar-scripts/player-mpris/player-mpris-tail.py next:} ‚è≠ %{A}%{T-}'
tail = true


[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = alsa_output.pci-0000_12_00.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <ramp-volume> <label-volume>

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
;   %decibels% (unreleased)
label-volume = %percentage%%

; Available tokens:
;   %percentage% (default)
;   %decibels% (unreleased)
label-muted = muted
label-muted-foreground = #aaa

; Only applies if <ramp-volume> is used
ramp-volume-0 =
ramp-volume-1 =
ramp-volume-2 =
